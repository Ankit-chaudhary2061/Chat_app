{
  "compilerOptions": {
    "target": "ES2020",                // Modern JS features
    "module": "CommonJS",              // Works with Node + ts-node easily
    "moduleResolution": "node",        // Resolves node_modules and local files
    "outDir": "./dist",                // Where compiled JS goes if you compile
    "rootDir": "./",                   // Root of your TS files
    "esModuleInterop": true,           // Allows default import from commonjs (like express)
    "forceConsistentCasingInFileNames": true,
    "strict": true,                    // Enables strict type checking
    "skipLibCheck": true,              // Skips type checks for node_modules
    "sourceMap": true,                 // Useful for debugging
    "isolatedModules": true            // Required for ts-node
  },
  "include": ["server.ts", "src/**/*"] // Include your main server and src folder
}